// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  user_id             String   @id @default(auto()) @map("_id") @db.ObjectId
  first_name          String
  surname             String
  nickname            String   @unique
  email               String   @unique
  phone_number        String?
  password            String
  is_profile_complete Boolean
  user_role           String   @db.ObjectId
  created_at          DateTime
  updated_at          DateTime

  role          User_Roles      @relation(fields: [user_role], references: [role_id])
  Subscriptions Subscriptions[]
}

model Events {
  event_id    String   @id @default(auto()) @map("_id") @db.ObjectId
  event_name  String
  description String
  date        DateTime
  address     String
  schedule    String
  latitude    String?
  longitude   String?
  created_at  DateTime
  updated_at  DateTime

  speakers      Speakers[]
  subscriptions Subscriptions[]
}

model Speakers {
  speaker_id    String   @id @default(auto()) @map("_id") @db.ObjectId
  event_id      String   @db.ObjectId
  speaker_name  String
  speaker_role  String
  speaker_image String
  title         String
  description   String
  media         String
  created_at    DateTime
  updated_at    DateTime

  event Events @relation(fields: [event_id], references: [event_id])
}

model Subscriptions {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id       String   @db.ObjectId
  event_id      String   @db.ObjectId
  is_remote     Boolean
  ticket_number Int
  ticket_url    String
  created_at    DateTime
  updated_at    DateTime

  user  Users  @relation(fields: [user_id], references: [user_id])
  event Events @relation(fields: [event_id], references: [event_id])
}

model User_Roles {
  role_id    String   @id @default(auto()) @map("_id") @db.ObjectId
  role       String   @unique
  created_at DateTime
  updated_at DateTime

  users Users[]
}
